<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frag.HomeScreenFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/college_moment_photos_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"

        />
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/cv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@+id/college_moment_photos_rv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/online_enquiry_cv"
                android:backgroundTint="@color/online_enquiry"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/enquiry"
                        android:layout_marginBottom="13dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/admission_enquiry" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/online_enquiry_for_b_tech_admission_2025"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:textStyle="bold|italic"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/online_facility_for_student"
                android:backgroundTint="@color/online_facility"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/facility"
                        android:layout_marginBottom="13dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/online_facilities_for_student"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:textStyle="bold|italic"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        android:elevation="20dp"
        android:id="@+id/cv_2"
        app:layout_constraintTop_toBottomOf="@+id/cv_1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/class_routines_cv"
                android:backgroundTint="@color/routine_colour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/routine"
                        android:layout_marginBottom="13dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/class_routines"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:textStyle="bold|italic"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/semister_form_fill_up"
                android:backgroundTint="@color/semister_form_color"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/form_fillup"
                        android:layout_marginBottom="13dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/semester_form_fill_up"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:textStyle="bold|italic"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/cv_2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/odd_sem_res_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="odd semister Result"
            app:cornerRadius="10dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/light_blue_900"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/prr_sem_res_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Prr semister Result"
            app:cornerRadius="10dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/md_blue_grey_700"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>